{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["dom", "es6"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test"
  ]
}